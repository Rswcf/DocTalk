# OpenRouter — 统一 API 网关 (所有 LLM 和 Embedding 调用通过 OpenRouter)
OPENROUTER_API_KEY=sk-or-v1-xxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Embedding (通过 OpenRouter)
EMBEDDING_MODEL=openai/text-embedding-3-small
EMBEDDING_DIM=1536

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=doc_chunks

# LLM (通过 OpenRouter)
LLM_MODEL=anthropic/claude-sonnet-4.5
LLM_MAX_CONTEXT_TOKENS=180000

# Object Storage (MinIO in dev)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=doctalk-pdfs
MINIO_PRESIGN_TTL=300

# Celery / Redis
CELERY_BROKER_URL=redis://localhost:6379/0
EMBED_BATCH_SIZE=64
EMBED_MAX_CONCURRENCY=4

# Limits
MAX_PDF_SIZE_MB=50
MAX_PDF_PAGES=500
MAX_CHAT_HISTORY_TURNS=6
MAX_RETRIEVAL_TOKENS=1750

# CORS
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql+asyncpg://doctalk:doctalk@localhost:5432/doctalk

# Auth (shared between frontend and backend)
AUTH_SECRET=your-32-byte-secret-here
ADAPTER_SECRET=your-adapter-secret-here

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
